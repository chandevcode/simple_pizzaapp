@page
@model RazorPizza.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
  <h1>Create Your Home Pizza</h1>
  <form method="post">
    <div class="form-group mt-3">
      <input type="text" asp-for="Pizza.PizzaName" placeholder="Type Pizza Name..." class="form-control mb-3" />
      <input type="checkbox" asp-for="Pizza.TomatoSauce" class="form-check-input" placeholder="Tomto Sauce" /> Tomato
      Sauce
      <br />
      <input type="checkbox" asp-for="Pizza.Cheese" class="form-check-input" placeholder="Cheese" /> Cheese
      <br />
      <input type="checkbox" asp-for="Pizza.Tuna" class="form-check-input" placeholder="Tuna" /> Tuna
      <br />
      <input type="checkbox" asp-for="Pizza.Peperoni" class="form-check-input" placeholder="Peperoni" /> Peperoni
      <br />
      <input type="checkbox" asp-for="Pizza.Mushroom" class="form-check-input" placeholder="Mushroom" /> Mushroom
      <br />
      <input type="checkbox" asp-for="Pizza.Pinapple" class="form-check-input" placeholder="Pinapple" /> Pinapple
      <br />
      <input type="checkbox" asp-for="Pizza.Ham" class="form-check-input" placeholder="Ham" /> Ham
      <br />
      <input type="checkbox" asp-for="Pizza.Beef" class="form-check-input" placeholder="Beef" /> Beef
      <br />
      <button class="btn btn-dark mt-2" type="submit"> Order My Pizza</button>
    </div>
  </form>
</div>